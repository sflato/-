{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "internetnetexplorer"
  },
  "icons": {
    "16": "internetexplorer-48.png",
    "32": "internetexplorer-48.png",
    "48": "internetexplorer-48.png",
    "128": "internetexplorer-48.png"
  },
  "manifest_version": 2
}
